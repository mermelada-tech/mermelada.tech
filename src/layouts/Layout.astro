---
import { Footer } from '@components/Footer'
import { Header } from '@components/Header'
import 'src/global.css'

export interface Props {
  title?: string
}
const { title = 'Mermelada.tech' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <section
    class="bg-[url('./rocket.svg')] bg-mt-light bg-[length:75%] bg-repeat-y bg-right h-screen md:h-max"
  >
    <Header />
    <slot />
  </section>


</html>
